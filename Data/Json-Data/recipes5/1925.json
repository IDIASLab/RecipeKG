        "name": "Bacon, Basil Pesto, and Tomato Sandwich",
        "image": {
            "@type": "ImageObject",
            "url": "https://imagesvc.meredithcorp.io/v3/mm/image?url=https%3A%2F%2Fimages.media-allrecipes.com%2Fuserphotos%2F6701100.jpg",
            "width": 1786,
